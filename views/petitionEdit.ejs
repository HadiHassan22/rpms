<!DOCTYPE html>
<head>
  <title>Registration Petition Management System</title>
  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="petition-container">
    <h2>RPMS</h2>
    <div class="petition">
      <form action="" method="POST" class="petition-header">
        <input
          type="text"
          name="course"
          placeholder="Enter course name"
        /><button type="submit">
          <span class="fas fa-plus"></span>
        </button>
      </form>
      <ul class="petition-list">
        <% petitions.forEach(details => { %><% if (details._id == petitionId) {
        %>
        <li class="petition-list-item">
          <form action="/api/petition/edit/<%= details._id %>" method="POST">
            <input
              type="text"
              value="<%= details.course %>"
              name="course"
            /><button type="submit">Submit</button
            ><a href="/api/petition/" class="cancel">Cancel</a>
          </form>
        </li>
        <% } else { %>
        <li class="petition-list-item">
          <div class="petition-list-item-name"><%= details.course %></div>
          <a href="/api/petition/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit"></span></a
          ><a href="/api/petition/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times"></span
          ></a>
        </li>
        <% } %><% }) %>
      </ul>
    </div>
  </div>
</body>
